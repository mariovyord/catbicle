<h1>Add a new toy</h1>
<div class="form">
	<h2>{{cat.name}}</h2>
	<img class="cube" src="/static/images/{{cat.imageUrl}}">
	{{#if toys}}
	<form action="/add-toy/{{cat.id}}" method="POST">
		<label for="toys">Toys</label>
		<select id="toys" name="toys" />
		{{#each toys}}
		<option value="{{id}}">{{name}}</option>
		{{/each}}
		</select>
		<input type="submit" value="Add">
	</form>
	{{else}}
	<h3 class="italic">This cube has all available accessories so far or there is no available at all...</h3>
	{{/if}}
	<a class="btn" href="/details/{{cat.id}}">Back</a>
</div>